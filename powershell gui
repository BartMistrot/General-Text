Add-Type -AssemblyName System.Windows.Forms

# Create the form (window)
$form = New-Object System.Windows.Forms.Form
$form.Text = "Simple PowerShell App"
$form.Size = New-Object System.Drawing.Size(400, 300)
$form.StartPosition = "CenterScreen"

# Create the button in the center
$button = New-Object System.Windows.Forms.Button
$button.Text = "Click Me"
$button.AutoSize = $true
$button.Location = New-Object System.Drawing.Point(150, 150)

# Add the button to the form
$form.Controls.Add($button)

# Add the scrolling text label
$scrollingText = New-Object System.Windows.Forms.Label
$scrollingText.Text = "This is scrolling text"
$scrollingText.AutoSize = $true
$scrollingText.Location = New-Object System.Drawing.Point(50, 50)

# Add the scrolling text to the form
$form.Controls.Add($scrollingText)

# Define the button click event
$button.Add_Click({
    [System.Windows.Forms.MessageBox]::Show("Hey, I work!")
})

# Timer for scrolling text
$timer = New-Object System.Windows.Forms.Timer
$timer.Interval = 100

# Initial x coordinate for the scrolling text
$x = 0

$timer.Add_Tick({
    # Increment the x position of the text
    $x = ($x + 5) % ($form.ClientSize.Width + $scrollingText.Width)
    $scrollingText.Location = New-Object System.Drawing.Point($form.ClientSize.Width - $x, $scrollingText.Location.Y)
})

# Start the timer
$timer.Start()

# Create the label to center above the button
$label = New-Object System.Windows.Forms.Label
$label.Text = "Centered Text Above Button"
$label.AutoSize = $true

# Add the label to the form
$form.Controls.Add($label)

# Use the Load event to position the label after the form and controls are fully initialized
$form.Add_Load({
    # Force layout to ensure sizes are updated
    $form.PerformLayout()

    # Access Width and Height correctly
    $buttonWidth = $button.Size.Width
    $labelWidth = $label.Size.Width
    $buttonHeight = $button.Size.Height
    $labelHeight = $label.Size.Height

    # Calculate the X coordinate to center the label above the button
    $labelX = $button.Location.X + ($buttonWidth - $labelWidth) / 2
    $labelY = $button.Location.Y - $labelHeight - 5  # Position 5 pixels above the button

    # Set the label's location
    $label.Location = New-Object System.Drawing.Point([int]$labelX, [int]$labelY)
})

# Show the form
[void]$form.ShowDialog()
