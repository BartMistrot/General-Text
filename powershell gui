Add-Type -AssemblyName System.Windows.Forms

# Create the form
$form = New-Object System.Windows.Forms.Form
$form.Text = "Simple PowerShell App"
$form.Size = New-Object System.Drawing.Size(400, 300)
$form.StartPosition = "CenterScreen"

# Create the button
$button = New-Object System.Windows.Forms.Button
$button.Text = "Click Me"
$button.AutoSize = $true

# Add the button to the form
$form.Controls.Add($button)

# Define the button click event
$button.Add_Click({
    [System.Windows.Forms.MessageBox]::Show("Hey, I work!")
})

# Create the label to center above the button
$label = New-Object System.Windows.Forms.Label
$label.Text = "This is text"
$label.AutoSize = $true

# Add the label to the form
$form.Controls.Add($label)

# Position controls after the form is shown
$form.Add_Shown({
    # Force layout to ensure sizes are updated
    $form.PerformLayout()
    $button.PerformLayout()
    $label.PerformLayout()
    
    # Center the button in the form
    $button.Location = New-Object System.Drawing.Point(
        ($form.ClientSize.Width - $button.Width) / 2,
        ($form.ClientSize.Height - $button.Height) / 2
    )

    # Center the label above the button
    $label.Location = New-Object System.Drawing.Point(
        ($form.ClientSize.Width - $label.Width) / 2,
        $button.Location.Y - $label.Height - 5  # Position 5 pixels above the button
    )
})

# Show the form
[void]$form.ShowDialog()
